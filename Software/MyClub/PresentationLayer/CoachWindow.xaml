<Window x:Class="PresentationLayer.CoachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="CoachWindow"
        MinHeight="800" 
        MinWidth="1200" 
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    <DockPanel>
        <StackPanel x:Name="navPanel" DockPanel.Dock="Left" Width="220" Background="#0A234B" Height="Auto">
            <!-- Make this Grid take all available height -->
            <Grid Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=StackPanel}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <StackPanel Grid.Row="0">
                    <Image Source="./Assets/MyClub.jpg" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 -50" />
                    <Label Content="MENU" FontWeight="Bold" FontSize="26" HorizontalContentAlignment="Center" Background="#0A234B" Foreground="White" Margin="10"/>
                    <Button x:Name="btnMatchManagement" BorderBrush="#041633" BorderThickness="0 0 6 6" Margin="0 10 0 0" FontSize="18" Content="Match management" Background="#0A234B" Foreground="White" Padding="10" Click="btnMatchManagement_Click"></Button>
                    <Button x:Name="btnMTrainings" BorderBrush="#041633" BorderThickness="0 0 6 6" Margin="0 0 0 0" FontSize="18" Content="Training management" Background="#0A234B" Foreground="White" Padding="10" Click="btnMTrainings_Click"></Button>
                </StackPanel>

                <!-- Logout at the bottom -->
                <Button x:Name="btnLogout" Grid.Row="2" Content="Logout" BorderBrush="#041633" BorderThickness="0 0 6 6" Margin="0 30 0 20" FontSize="18" Background="#0A234B" Foreground="White" Padding="10" Click="btnLogout_Click" VerticalAlignment="Bottom"/>
            </Grid>
        </StackPanel>
        <ContentControl x:Name="contentPanel" Margin="100"/>
    </DockPanel>
</Window>
