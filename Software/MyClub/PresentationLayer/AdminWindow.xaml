<Window x:Class="PresentationLayer.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        xmlns:helper="clr-namespace:PresentationLayer.Helper"
        mc:Ignorable="d"
        Title="AdminWindow" 
        MinHeight="800" 
        MinWidth="1200" 
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    <DockPanel>
         <StackPanel x:Name="navPanel" DockPanel.Dock="Left" Width="200" Background="#0A234B">
      <Image Source="./Assets/MyClub.jpg" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 -50" />
            <Label Content="MENU" FontWeight="Bold" FontSize="26" HorizontalContentAlignment="Center" Background="#0A234B" Foreground="White" Margin="10"></Label>
            <Button x:Name="btnRegistrationRequests" BorderBrush="#041633" BorderThickness="0 0 6 6" Margin="0 10 0 0" FontSize="18" Content="Review Registration" Background="#0A234B" Foreground="White" Padding="10" Click="btnRegistrationRequests_Click"></Button>
            <Button x:Name="btnManageMemberships" BorderBrush="#041633" BorderThickness="0 0 6 6" Margin="0 10 0 0" FontSize="18" Content="Manage Memeberships" Background="#0A234B" Foreground="White" Padding="10" Click="btnManageMemberships_Click"></Button>
            <Button x:Name="btnEditProfile" Content="Edit profile" Height="25" Background="AliceBlue" BorderThickness="1" Click="btnEditProfile_Click"></Button>
            <!--<TextBlock Text="{Binding Source={x:Static helper:CurrentUser.User}, Path=Username, StringFormat='Welcome {0}!'}"
                       FontSize="14"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,20,0,20"/>-->
        </StackPanel>
        <ContentControl x:Name="contentPanel" Margin="100"></ContentControl>
    </DockPanel>
</Window>
