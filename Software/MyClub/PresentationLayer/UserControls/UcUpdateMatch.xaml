<UserControl x:Class="PresentationLayer.UserControls.UcUpdateMatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <DockPanel>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Add Match" DockPanel.Dock="Top"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" MaxHeight="100"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Opponent:" Grid.Column="1" Grid.Row="1" FontWeight="Bold"/>
            <TextBox x:Name="txtOpponent" Grid.Column="1" Grid.Row="2" Margin="2"/>
            <Label Content="MatchDate:" Grid.Column="1" Grid.Row="3" Margin="2" FontWeight="Bold"/>
            <DatePicker x:Name="dtMatchDate" Grid.Column="1" Grid.Row="4" Margin="2"/>
            <Label Content="Start time:" Grid.Column="1" Grid.Row="5" Margin="2" FontWeight="Bold"/>
            <TextBox x:Name="txtStartTime" Grid.Column="1" Grid.Row="6" Margin="2"/>
            <StackPanel Grid.Column="1" Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnAddMatch" Content="Add match" Width="100" Height="25" Margin="2"  Grid.Column="1" Grid.Row="2" Background="LightBlue" Click="btnAddMatch_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
