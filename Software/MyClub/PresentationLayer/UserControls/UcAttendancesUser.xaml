<UserControl x:Class="PresentationLayer.UserControls.UcAttendancesUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
                          d:DesignHeight="800" d:DesignWidth="1200" Loaded="UserControl_Loaded">
    <DockPanel>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Match management" DockPanel.Dock="Top"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="200" MaxHeight="200"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="200" MaxHeight="300"/>
                <RowDefinition Height="30" MaxHeight="30"/>
            </Grid.RowDefinitions>
            <Label Content="Trainings" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold"></Label>
            <DataGrid x:Name="dgTrainingGrid" Grid.Column="0" Margin="0,10,0,10" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled"></DataGrid>
            <Label Content="Matches" Grid.Column="2" Grid.Row="2" FontWeight="Bold" HorizontalAlignment="Center"></Label>
            <DataGrid x:Name="dgMatchGrid" Grid.Column="2" Grid.Row="3" Margin="0,10,0,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled"></DataGrid>
            <StackPanel x:Name="stackPanel" DockPanel.Dock="Left" Width="420" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="1">
            <Button x:Name="btnAddMatch" Content="Mark attendance" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnMarkAttendance_Click"></Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
