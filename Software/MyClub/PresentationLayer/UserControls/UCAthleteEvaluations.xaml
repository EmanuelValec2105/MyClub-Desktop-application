<UserControl x:Class="PresentationLayer.UserControls.UCAthleteEvaluations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <DataGrid x:Name="dataGridEvaluations" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="Mark" Binding="{Binding Mark}" Width="*"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="lblStatus" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="14" Foreground="DarkBlue" Visibility="Collapsed" Margin="10"/>
    </Grid>
</UserControl>