<UserControl x:Class="PresentationLayer.UserControls.UcProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Loaded="UserControl_Loaded">
    <DockPanel>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Profile" DockPanel.Dock="Top"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="First name:" Grid.Column="0" Grid.Row="0" FontWeight="Bold"/>
            <TextBox x:Name="txtFirstName" Grid.Column="1" Grid.Row="0" Margin="2"/>
            <Label Content="Last name:" Grid.Column="0" Grid.Row="1" FontWeight="Bold"/>
            <TextBox x:Name="txtLastName" Grid.Column="1" Grid.Row="1" Margin="2"/>
            <Label Content="Birth date:" Grid.Column="0" Grid.Row="2" FontWeight="Bold"/>
            <TextBox x:Name="txtBirthDate" Grid.Column="1" Grid.Row="2" Margin="2"/>
            <Label Content="Email:" Grid.Column="0" Grid.Row="3" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Grid.Column="1" Grid.Row="3" Margin="2"/>
            <Label Content="Role type:" Grid.Column="0" Grid.Row="4" Margin="2" />
            <TextBox x:Name="txtRoleType" Grid.Column="1" Grid.Row="4" Margin="2"/>
            <Button x:Name="btnEditProfile" Content="Edit profile" Width="120" Height="25" Margin="2"  Grid.Column="1" Grid.Row="5" Background="LightBlue" Click="btnEditProfile_Click"/>
        </Grid>
    </DockPanel>
</UserControl>
