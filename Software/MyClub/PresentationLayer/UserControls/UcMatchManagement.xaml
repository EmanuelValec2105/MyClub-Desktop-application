<UserControl x:Class="PresentationLayer.UserControls.UcMatchManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Loaded="UserControl_Loaded">
    <DockPanel>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Match management" DockPanel.Dock="Top"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="600" MaxHeight="600"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dgCoachGrid" Grid.Column="1" Margin="0,10,0,10" Grid.Row="0"/>
            <StackPanel x:Name="stackPanel" DockPanel.Dock="Left" Width="420" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
                <Button x:Name="btnAddMatch" Content="Add match" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnAddMatch_Click"/>
                <Button x:Name="btnUpdateMatch" Content="Update match" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnUpdateMatch_Click"/>
                <Button x:Name="btnDeleteMatch" Content="Delete match" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnDeleteMatch_Click"/>
                <Button x:Name="btnPostponeMatch" Content="Delete match" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnPostponeMatch_Click"/>
            </StackPanel>
         </Grid>
    </DockPanel>
</UserControl>
