<UserControl x:Class="PresentationLayer.UserControls.UcMatchManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A234B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#041633"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#0A234B" Grid.Row="0" Padding="15">
            <TextBlock Text="Match management"
                   Foreground="White"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <DataGrid x:Name="dgCoachGrid" HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Height="Auto"
            Margin="10 30 10 10"
            Width="Auto"
            SelectionMode="Single"
            Background="#FFF0F4FF"
            FontSize="14"
            CanUserReorderColumns="False" 
            CanUserResizeColumns="False"
            AutoGenerateColumns="False"
            VerticalScrollBarVisibility="Hidden"
            Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Match date" Binding="{Binding MatchDate}" Width="100"/>
                <DataGridTextColumn Header="Opponent team" Binding="{Binding OpponentTeam}" Width="150"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="100"/>
                <DataGridTextColumn Header="Start time" Binding="{Binding StartTime}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="50"/>
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="stackPanel" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <Button x:Name="btnAddMatch" Content="Add match" Style="{StaticResource ButtonStyle}" Click="btnAddMatch_Click"/>
            <Button x:Name="btnUpdateMatch" Content="Update match" Style="{StaticResource ButtonStyle}" Click="btnUpdateMatch_Click"/>
            <Button x:Name="btnDeleteMatch" Content="Delete match" Style="{StaticResource ButtonStyle}" Click="btnDeleteMatch_Click"/>
            <Button x:Name="btnPostponeMatch" Content="Postpone match" Style="{StaticResource ButtonStyle}" Click="btnPostponeMatch_Click" Width="124"/>
        </StackPanel>
    </Grid>
</UserControl>
