<UserControl x:Class="PresentationLayer.UserControls.UcDeleteConfirmation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="150">
    <Grid>
        <Border Background="#0A234B" Padding="15">
            <StackPanel>
                <TextBlock Text="Delete Confirmation" 
                          Foreground="White"
                          FontSize="18"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Are you sure you want to delete this training?"
                          Foreground="White"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnYes" Content="Yes" 
                            Width="80" Height="30" Margin="0,0,10,0"
                            Click="btnYes_Click"/>
                    <Button x:Name="btnNo" Content="Cancel" 
                            Width="80" Height="30"
                            Click="btnNo_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>