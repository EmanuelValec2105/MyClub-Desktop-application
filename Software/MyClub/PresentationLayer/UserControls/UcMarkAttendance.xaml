<UserControl x:Class="PresentationLayer.UserControls.UcMarkAttendance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Loaded="UserControl_Loaded">
    <DockPanel>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Add Match" DockPanel.Dock="Top"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" MaxHeight="100"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition Height="30" MaxHeight="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="lblDate" Content="Date:" Grid.Column="1" Grid.Row="1" Margin="2" FontWeight="Bold"></Label>
            <Label x:Name="lblStartTime" Content="Start time:" Grid.Column="1" Grid.Row="2" Margin="2" FontWeight="Bold"></Label>
            <Label Content="Will your attend:" Grid.Column="1" Grid.Row="3" FontWeight="Bold"/>
            <ComboBox x:Name="cbStatus" Grid.Column="1" Grid.Row="4" Margin="2">
                <ComboBoxItem Content="+"></ComboBoxItem>
                <ComboBoxItem Content="-"></ComboBoxItem>
            </ComboBox>
            <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Save choice" Width="100" Height="25" Margin="2"  Grid.Column="1" Grid.Row="2" Background="LightBlue" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="25" Margin="2" Background="LightBlue" Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
