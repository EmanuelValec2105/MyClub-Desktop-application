<UserControl x:Class="PresentationLayer.UserControls.UCCoachEvaluation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Select Athlete:" VerticalAlignment="Center" Margin="0,0,5,0"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbAthletes" Width="200" Margin="0,5" HorizontalAlignment="Left"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Rating (1-10):" VerticalAlignment="Center" Margin="0,0,5,0"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Slider x:Name="sldRating" Foreground="#041633" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Width="150" Height="30" Value="5"/>
            <TextBlock x:Name="txtRatingValue" Text="{Binding ElementName=sldRating, Path=Value, StringFormat=0}" VerticalAlignment="Center" Margin="5,0"/>
        </StackPanel>

        <Label Grid.Row="2" Grid.Column="0" Content="Comment:" VerticalAlignment="Top" Margin="0,5,5,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtComment" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>

        <Button Grid.Row="3" Grid.ColumnSpan="2" x:Name="btnSubmitEvaluation" Background="#041633" Foreground="White" Content="Submit Evaluation" Width="150" Height="30" HorizontalAlignment="Center" Margin="0,10" Click="btnSubmitEvaluation_Click"/>

        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" x:Name="lblStatus" FontSize="14" Foreground="DarkBlue" TextAlignment="Center" Visibility="Collapsed" Margin="0,10"/>
    </Grid>
</UserControl>