<UserControl x:Class="PresentationLayer.UserControls.UcTrainingsCoach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Trainings" Height="28" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgTrainings" HorizontalAlignment="Center" Height="260" Margin="10,80,0,0" VerticalAlignment="Top" Width="780" SelectionMode="Single" AutoGenerateColumns="True"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Margin="720,406,0,0" VerticalAlignment="Top" Width="75" Click="btnRemove_Click"/>
        <Button x:Name="btnUpdate" Content="Modify" HorizontalAlignment="Left" Margin="626,406,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click"/>
        <Button x:Name="btnAddNew" Content="Add New" HorizontalAlignment="Left" Margin="529,406,0,0" VerticalAlignment="Top" Width="75" Click="btnAddNew_Click"/>
    </Grid>
</UserControl>
