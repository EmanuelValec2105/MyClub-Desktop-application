<UserControl x:Class="PresentationLayer.UserControls.UcTrainingsCoach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Label x:Name="header" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" Content="Trainings" Height="28" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgTrainings" 
          HorizontalAlignment="Center" 
          Height="260" 
          Margin="10,80,0,0" 
          VerticalAlignment="Top" 
          Width="780" 
          SelectionMode="Single"
          AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" 
                          Binding="{Binding TrainingDate}"
                          CanUserSort="True"/>
                <DataGridTextColumn Header="Start Time" 
                          Binding="{Binding StartTime}"/>
                <DataGridTextColumn Header="End Time" 
                          Binding="{Binding EndTime}"/>
                <DataGridTextColumn Header="Team" 
                          Binding="{Binding Team.Name}"/>
                <DataGridTemplateColumn Header="Attendance">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnAttendance" Content="Attendance" 
                           Click="btnAttendance_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Margin="720,406,0,0" VerticalAlignment="Top" Width="75" Click="btnRemove_Click"/>
        <Button x:Name="btnUpdate" Content="Modify" HorizontalAlignment="Left" Margin="626,406,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click"/>
        <Button x:Name="btnAddNew" Content="Add New" HorizontalAlignment="Left" Margin="529,406,0,0" VerticalAlignment="Top" Width="75" Click="btnAddNew_Click"/>
    </Grid>
</UserControl>
